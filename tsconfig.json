{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "target": "ES2018",
    "module": "commonjs",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "sourceMap": false,
    "allowJs": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["./src/*"],
      "medea": ["./node_modules/medea/dist"]
    }
  },
  "include": ["./node_modules/@types/node/globals.d.ts", "./src/**/*"]
}
